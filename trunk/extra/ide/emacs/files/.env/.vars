###
### Development environment variables
###

if test -z "$_DEV_VARS_READ"; then

  if test -z "$LOAD_COUNTER"; then
    export LOAD_COUNTER=1;
  else
    LOAD_COUNTER=$(( $LOAD_COUNTER + 1 ));
  fi

#  readonly _DEV_VARS_READ=$LOAD_COUNTER;
  export _DEV_VARS_READ=$LOAD_COUNTER;
  export _DEV_VARS_READ;


  ######
  ###
  ### Subversion/CVS development environment vars
  ###

  export EDITOR=/usr/bin/emacs

  # IP or name of cvs server
  export CVS_SERVER=https://svn.lingotek.com/repos/lingosuite/trunk

  # user's name on cvs server
  export CVS_USER=spence
  export SVN_USER=spence

  # location of development sandbox (svn checkout dir under user's home)
  # comment out to use 'default' of "sandbox"
  export SANDBOX_NAME=co

  ####
  ## these shouldn't need to be changed
  test -z "$SANDBOX_NAME" && SANDBOX_NAME=sandbox;
  export SANDBOX=/home/$USER/$SANDBOX_NAME

  # setup for cvs
  test -z "$CVS_USER" && CVS_USER=$USER;
  export CVSROOT=:ext:$CVS_USER@$CVS_SERVER
  export CVS_RSH=/usr/bin/ssh
  ####
  export CVSEDITOR=emacsclient

  ######
  ###
  ### Java development environment vars
  ###

  # setup locations/opts of java, ant
  # If the following can be assumed, then these need not be changed:
  #   Using ln -s source target
  #    install current java under /usr/local/java as /etc/opt/java
  #    install current ant under /usr/local/ant as /etc/opt/ant
  #    install current tomcat under /usr/local/tomcat as /etc/opt/tomcat
  export AUTHOR="Spence Koehler"
  export JAVA_HOME=/etc/opt/java
  export ANT_HOME=/etc/opt/ant
  export ANT_BUILD_NAME="ant-build.xml"
  export CATALINA_HOME="/etc/opt/tomcat"
  export TOMCAT_HOME="/etc/opt/tomcat"
	export M2_HOME="/etc/opt/maven"
	export MAVEN_OPTS="-Xmx512m"

  ####
  ## These shouldn't need to be changed
  export JDK_HOME=$JAVA_HOME
  export JAVAC=$JAVA_HOME/bin/javac
  ####

  # these should be adequate defaults
  export JAVA_OPTS="-Xmx640m -Dcom.sun.management.jmxremote"
  export ANT_OPTS=-Xmx500m
  ####
  ## This shouldn't need to be changed
  # add bins to path
  PATH=.:$ANT_HOME/bin:$JAVA_HOME/bin:$M2_HOME/bin:$PATH
  ####

  ####
  # define projects in $SANDBOX currently being worked on (space delimited)
  #export ANT_PROJECTS_LIB=`cpgen $SANDBOX/anttasks`
  #export PROJECTS="$SANDBOX/trunk/util $SANDBOX/trunk/lingonet $SANDBOX/trunk/newdoc $SANDBOX/trunk/lingopointclient $SANDBOX/trunk/lingopoint"
	#export PROJECTS_CLASSPATH=`cpgen $PROJECTS`

  ######
  ###
  ### Libraries to load
  ###

  # define any necessary LD_LIBRARY_PATHs
  #export LD_LIBRARY_PATH=/usr/local/java/java_ee/SDK/lib

  # setup extra library paths
  #EXTRA_LIBRARY_PATH=/usr/local/lib:/usr/share/java:/etc/opt/java/jre/lib/i386

  ####
  ## This shouldn't need to be changed
  if test -n "$EXTRA_LIBRARY_PATH"; then
    if test -z "$LD_LIBRARY_PATH"; then
      LD_LIBRARY_PATH=$EXTRA_LIBRARY_PATH
    else
      LD_LIBRARY_PATH=$LD_LIBRARY_PATH:$EXTRA_LIBRARY_PATH
    fi
  fi
  ####


